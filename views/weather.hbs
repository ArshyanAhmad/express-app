<!DOCTYPE html>
<html lang="en">

<head>
    {{>scripts}}
    <title>
        {{title}}
    </title>
    <link rel="stylesheet" href="css/weather.css">
</head>

<body>

    {{>navbar}}

    <!-- main header  -->
    <div class="container-fluid main_header">
        <div class="row">

            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" placeholder="Enter your city name" autocomplete="off" id="cityName">
                        <input type="submit" value="search" id="submit">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p><span id="temp">0</span><sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    {{>footer}}


    <script src="js/main.js"></script>
</body>

</html>